<?xml version="1.0" ?>
<mujoco model="mujoco_panda_model">

    <include file="other/simple_scene.xml"/>
    <include file="panda/assets.xml"/>
    <compiler meshdir=""/>

    <default>  
    <default class="block_visual">
      <geom contype="0" conaffinity="0"/>
    </default>
    <default class="block_collision">
      <geom contype="1" conaffinity="1" condim="4" solimp="0.99 0.99 0.01" solref="0.01 1"/>
    </default>
    <site rgba="1 0 0 .5"/>
  </default> 

    <option cone="elliptic" timestep="0.01" integrator="Euler">
        <flag gravity="enable"/>
    </option>

    <worldbody>
        <include file="panda/arm_with_gripper.xml"/>
        <body name="table1" pos="0.25 0 0.47">
            <geom name="table1_geom" class="block_collision" size=".15 0.5 0.01" rgba="0.96 0.85 0.76 1" friction="0.5 0.005 0.0001" mass="20" type="box"/>
        </body>
        <body name="table2" pos="0.55 0 0.47">
            <geom name="table2_geom" class="block_collision" size=".15 0.5 0.01" rgba="0.8 0.4 0.3 1" friction="0.5 0.005 0.0001" mass="20" type="box"/>
        </body>
        <body name="object1" pos="0.31 0 0.5">
            <geom name="object1_geom" class="block_collision" size=".02 0.02 0.02" rgba="0.96 0.85 0.76 1" friction="0.2 0.005 0.0001" mass="2" type="box"/>
            <joint name="sliding" type="free"/>
        </body>
    </worldbody>

    <actuator>
        <include file="panda/actuators/torque_with_gripper.xml"/>
    </actuator>

    <sensor>
        <include file="panda/sensors/ft_sensor.xml" />
    </sensor>

</mujoco>
